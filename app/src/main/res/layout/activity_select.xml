<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yukselaggoz.yuztanima.SelectActivity">

    <ImageView
        android:id="@+id/img_person"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:background="#E0E0E0"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="78dp" />

    <Button
        android:id="@+id/btn_img_select"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_person"
        android:layout_alignStart="@+id/img_person"
        android:layout_below="@+id/img_person"
        android:text="Resim Seç" />

    <Button
        android:id="@+id/btn_img_capture"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_person"
        android:layout_alignRight="@+id/img_person"
        android:layout_below="@+id/img_person"
        android:text="Fotoğraf Çek" />

    <Button
        android:id="@+id/btn_cam_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/img_person"
        android:layout_alignLeft="@+id/btn_img_select"
        android:layout_below="@+id/btn_img_select"
        android:layout_marginTop="44dp"
        android:text="Anlık Karşılaştır" />

    <Button
        android:id="@+id/btn_img_train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_person"
        android:layout_alignLeft="@+id/btn_img_select"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/img_person"
        android:layout_alignStart="@+id/btn_img_select"
        android:layout_marginBottom="40dp"
        android:text="Sorgula" />

</RelativeLayout>